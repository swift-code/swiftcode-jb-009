# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
POST    /login                      controllers.Application.login()
POST    /signup                     controllers.Application.signup()
GET     /profile/:id                controllers.HomeController.getProfile(id: Long)
POST    /request/send/:sid/:rid     controllers.RequestController.sendRequest(id: Long,id: Long)
POST    /accept/:rid                controllers.RequestController.acceptRequest(id: Long)